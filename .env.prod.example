# Production Environment Variables
# Copy this file to .env.prod and fill in your values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
POSTGRES_DB=authnode2fa_prod
POSTGRES_USER=authnode2fa_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# ==========================================
# SECURITY KEYS (Generate strong random keys)
# ==========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY_64_CHARS_MIN

# ENCRYPTION_KEY - OPTIONAL
# Auto-generated and persisted in backend/.encryption_key if not set
# For production, you can specify your own key
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ENCRYPTION_KEY=CHANGE_THIS_TO_YOUR_BASE64_FERNET_KEY_IF_YOU_WANT_TO_SPECIFY_ONE

# Generate with: openssl rand -hex 32
REDIS_PASSWORD=CHANGE_THIS_TO_A_STRONG_REDIS_PASSWORD

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
APP_ENV=production
APP_URL=https://yourdomain.com

# ==========================================
# EMAIL/SMTP CONFIGURATION (Optional)
# ==========================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=AuthNode 2FA

# ==========================================
# RATE LIMITING CONFIGURATION
# ==========================================
LOGIN_RATE_LIMIT=5/minute
SIGNUP_RATE_LIMIT=3/minute
TOTP_VERIFY_RATE_LIMIT=10/minute
API_RATE_LIMIT=100/minute
SENSITIVE_API_RATE_LIMIT=30/minute

# ==========================================
# SECURITY SETTINGS
# ==========================================
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
REACT_APP_API_BASE_URL=/api
REACT_APP_APP_URL=https://yourdomain.com
